<div class="col-mb-4 home">
    <div class="col-md-5 header">
        <h1>Shop</h1>
    </div>
    {{#each shirts as |shirt| }}
    <div class="cohort-shirt col-md-5">
        <h2 class="shirt-title">{{shirt.cohort_name}}</h2>
    
        <h2 class="shirt-price">{{shirt.price}}</h2>
        <a href="/shirt/{{id}}"> 
            <img= src="{{shirt.img}}" alt="Graphic of {{shirt.cohort_name}}"></a>
    </div>
    <div class="form-group">
        <a href="/shirt/{{id}}" class="btn btn-primary" type="submit">View Shirt</a>
    </div>
    {{/each}}
</div>
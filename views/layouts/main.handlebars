  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}


  <footer>
    {{!-- The footer returns to the CodeThread homepage which is demarcated via the '/' --}}
   
<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Contact the Team</button>


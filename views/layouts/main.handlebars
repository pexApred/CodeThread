          <a class="nav-item nav-link" href="/login">Log In</a>
          {{/if}}

        </div>
      </div>
    </div>
  </nav>

  <main class="container container-fluid mt-5">
    <!-- Render the sub layout -->
    {{!-- The syntax per handlebars for this part is {{{ body }}} --}}
    {{{ body }}}
  </main>
  </div>

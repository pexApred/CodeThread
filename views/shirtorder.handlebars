<div class="row mt-4">
  <div class="col-md-6">
    <h3>My Orders</h3>
    {{#each orders as |order| }}
    <div class="cohort-shirt col-md-5">
      <p>Name: {{name}}</p>
        <p class="shirt-title">Cohort: {{cohort_name}}</p>
          <a href={{shirt.handlebars}}" img="{{cohort_shirt}}"" alt="Graphic of {{cohort_name}}"></a>
        <p class="shirt-size">Size: {{shirt.size}}</p>
        <br>
        <p class="shirt-color">Color: {{shirt.color}}</p>
    </div>
    {{/each}}
  </div>
</div>